# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true   #Como "true" sempre que salvar um arquivo, se tiver espaços em branco a mais no final do código, elas somem.
insert_final_newline = true    #Com "true" sempre que salvar o arquivo, o cursos pula para a linha de baixo
